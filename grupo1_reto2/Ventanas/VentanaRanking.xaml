<Window x:Class="grupo1_reto2.Ventanas.VentanaRanking"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:grupo1_reto2.Ventanas"
        mc:Ignorable="d"
        Title="VentanaRanking" Height="450" Width="800">
    <Grid>
        <!--DIVISIÓN DE LA PÁGINA-->
        <Grid.RowDefinitions>
            <RowDefinition Height="61*"  />
            <RowDefinition Height="65*" />
            <RowDefinition Height="252*"  />
            <RowDefinition Height="56*"  />
        </Grid.RowDefinitions>

        <!--TITULO DE LA PÁGINA-->
        <TextBlock HorizontalAlignment="Left" Grid.Row="0" TextWrapping="Wrap" Text="Ranking" VerticalAlignment="Center" Height="41" Width="104" FontSize="24" Margin="364,0,0,0"/>


        <!--SECCIÑON DE BÚSQUEDA-->
        <Grid Margin="0,33,0,0" Grid.RowSpan="2">
            <!--POSICIÓN-->
            <TextBlock TextWrapping="Wrap" Margin="39,42,696,32"><Run Language="es-es" Text="Posición"/><Run Text=":"/></TextBlock>
            <TextBox x:Name="txtBuscarPosicion" TextChanged="FiltroRanking_TextChanged" ToolTip="Buscar por posición" Margin="40,61,690,7"/>

            <!--NOMBRE-->
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Width="60" Margin="124,42,0,32" ><Run Language="es-es" Text="Nombre:"/></TextBlock>
            <TextBox x:Name="txtBuscarNombreJugadorPartida" TextChanged="FiltroRanking_TextChanged" ToolTip="Buscar Nombre del jugador" Margin="125,61,595,7"/>

            <!--DURACIÓN-->
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Width="116" Margin="219,42,0,32" Text="Puntuación total:" />
            <TextBox x:Name="txtBuscarDuracion" TextChanged="FiltroRanking_TextChanged" ToolTip="Buscar Duración" Margin="220,61,499,7"/>

            <!--BOTÓN PAR LIMPIAR LOS CAMPOS-->
            <Button Content="🧹" Click="LimpiarFiltros_Click" Margin="363,45,389,7" ToolTip="Limpiar campos" FontSize="18" RenderTransformOrigin="0.322,0.48"/>
        </Grid>
        
        <!--DATAGRID-->
        <DataGrid x:Name="dataGridRankingCompleto" Grid.Row="2" AutoGenerateColumns="False" IsReadOnly="True" Margin="40,13,40,22" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Posicion" Binding="{Binding Posicion}" Width="*"/>
                <DataGridTextColumn Header="Jugador" Binding="{Binding Nombre}" Width="*"/>
                <DataGridTextColumn Header="Puntuación Total" Binding="{Binding ScoreTotal}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <!--BOTÓN PARA CERRAR LA PÁGINA-->
        <Button Content="Cerrar" Grid.Row="3" Margin="702,13,43,14" Click="Button_Click" >
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>
